{
    "name": "sonata-project/formatter-bundle",
    "type": "symfony-bundle",
    "description": "Symfony SonataFormatterBundle",
    "keywords": ["sonata", "formatter", "markdown", "ckeditor", "markitup"],
    "homepage": "http://sonata-project.org/bundles/formatter",
    "license": "MIT",
    "authors": [
        {
            "name": "Thomas Rabaix",
            "email": "thomas.rabaix@sonata-project.org",
            "homepage": "http://sonata-project.org"
        },
        {
            "name": "Sonata Community",
            "homepage": "https://github.com/sonata-project/SonataFormatterBundle/contributors"
        }
    ],
    "require": {
        "symfony/framework-bundle": "~2.3",
        "symfony/form": "~2.3",
        "twig/twig": "*",
        "knplabs/knp-markdown-bundle": "~1.2.0",
        "egeloen/ckeditor-bundle": "~2.2",
        "sonata-project/block-bundle": "^2.2.1",
        "sonata-project/core-bundle": "^2.2.1"
    },
    "require-dev": {
        "symfony/validator": "~2.3",
        "sonata-project/markitup-bundle": "~2.1",
        "fabpot/php-cs-fixer": "~0.5|~1.0"
    },
    "conflict": {
        "symfony/property-access": "<2.3"
    },
    "autoload": {
        "psr-4": { "Sonata\\FormatterBundle\\": "" }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.3.x-dev"
        }
    }
}
